{
  "name": "minimal-react-boilerplate",
  "version": "0.0.1",
  "description": "A minimal React boilerplate",
  "author": "Luca Peduto <luca@eloquentbit.com>",
  "license": "MIT",
  "scripts": {
    "start": "webpack-dev-server --progress --colors --hot --config ./webpack.config.js",
    "lint": "prettier --no-semi --single-quote --write src/**/*.js"
